<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<table class="table">
  <thead>
    <tr>
      <th>Text</th>
      <th>Subject</th>
      <th>Title</th>
      <th>Category</th>
      <th>Author</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.text %></td>
        <td><%= post.subject %></td>
        <td><%= post.title %></td>
        <td><%= post.category.description %></td>
        <td><%= post.author.name unless post.author.nil? %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Show', post, class: 'btn btn-default' %>
            <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-default' %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
